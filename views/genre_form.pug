extends layout

block content
    h1 #{title}

    form(method='POST' action='')
        div.form-group
            label(form='name')
            input#name.form-control(type='test', placeholder='Fantasy, Poetry, etc.' name='name' value=(undefined===genre ? '': genre.name))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg